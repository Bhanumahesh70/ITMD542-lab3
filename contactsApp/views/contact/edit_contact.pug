extends layout

block content
  .edit-contact-form
    h1 Edit Contact
    form(action=`/contacts/${contact.id}?_method=PUT`, method='POST')
      label(for='firstName') First Name:
      input(type='text', name='firstName', value=contact.firstName, required)
      label(for='lastName') Last Name:
      input(type='text', name='lastName', value=contact.lastName, required)
      label(for='email') Email Address:
      input(type='email', name='email', value=contact.email)
      label(for='notes') Notes:
      textarea(name='notes')= contact.notes
      button(type='submit') Update Contact
