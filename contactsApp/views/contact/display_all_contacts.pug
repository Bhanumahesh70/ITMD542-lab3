extends layout

block content
  .contacts-container
    h1 All Contacts
    a(href='/contacts/create', class='create-contact-btn') Create New Contact
    table.contacts-table
      thead
        tr
          th First Name
          th Last Name
          th Email Address
          th Actions
      tbody
        each contact in contacts
          tr
            td= contact.firstName
            td= contact.lastName
            td= contact.email
            td
              a(href=`/contacts/${contact.id}`, class='view-contact-link') View
